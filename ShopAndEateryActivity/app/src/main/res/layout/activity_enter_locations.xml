<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thedude.shopandeateryactivity.EnterLocations">

    <TextView
        android:id="@+id/lblLocation"
        android:layout_width="199dp"
        android:layout_height="30dp"
        android:text="Enter Location"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/txtbxlocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblLocation"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/lblDistance"
        android:layout_width="199dp"
        android:layout_height="30dp"
        android:text="Distance"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/txtbxlocation"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/txtbxdistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblDistance"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/lblDistance"
        android:layout_below="@+id/txtbxdistance"
        android:layout_marginEnd="51dp"
        android:text="Submit" />

</RelativeLayout>
